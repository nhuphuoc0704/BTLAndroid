<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/custom_background_item_moive"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="275dp"
    android:layout_marginRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_weight="7.0"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgMovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:paddingHorizontal="5dp"
        android:orientation="horizontal"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tvStarItemMovie"
            android:textSize="14dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:paddingHorizontal="5dp"
        android:id="@+id/tvNameMovie"
        android:layout_weight="1.5"
        android:maxLines="2"

        android:ellipsize="end"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <LinearLayout
        android:layout_margin="5dp"
        android:background="@drawable/custom_background_button_watchlist"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imgAddWatchlist"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tvWatchlist"
            android:textColor="#22A2F0"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:text="Watchlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>